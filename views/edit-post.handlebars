<article>
  <button class="btn">
  <a class="is-size-5 has-text-white has-text-weight-bold" href="/dashboard"> &larr; Back to dashboard</a>
  </button>
  <h2 class="is-size-2 has-text-weight-bold">
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title" class="is-size-4 has-text-weight-bold">Title:</label>
      <input name="post-title" type="text" class="is-capitalized is-size-4" value="{{post.title}}" />
    </div>
    <div>
      <label for="content" class="is-size-4 has-text-weight-bold">Content:</label>
       {{!-- <textarea name="comment-body" class="is-capitalized is-size-4"value='{{post.content}}'></textarea> --}}
      <input class="textarea is-capitalized is-size-4" name="content" value='{{post.content}}' />
    </div>
    <div class="is-capitalized is-size-4 has-text-weight-bold">
      {{!-- {{post.paw_count}} {{format_plural "paw" post.paw_count}} by you on {{format_date post.created_at}} --}}
     Posted by {{user.username}} on {{format_date created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn is-size-5 has-text-white has-text-weight-bold">Save post</button>
    <button type="button" class="delete-post-btn btn is-size-5 has-text-white has-text-weight-bold">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body" class=" "></textarea>
  </div>

  <div>
    <button type="submit" class="btn is-capitalized is-size-5 has-text-white has-text-weight-bold">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>