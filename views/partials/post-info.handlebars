<article class="post">
  <div class="title">
    <a href="/post/{{id}}" target="_blank">{{title}}</a>
    <div>
      {{content}}
    </div>
    <span>({{format_url post_url}})</span>
  </div>
  <div class="meta">
    {{paws_count}} {{format_plural "paw" paws_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>