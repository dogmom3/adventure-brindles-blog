    {{!-- <span>({{format_url post_url}})</span> --}}
  </div>
  <div class="meta">
    {{paw_count}} {{format_plural "paw" paw_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>

